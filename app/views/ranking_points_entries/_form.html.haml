= form_for @ranking_points_entry do |f|
  - if @ranking_points_entry.errors.any?
    #error_explanation
      %h2= "#{pluralize(@ranking_points_entry.errors.count, "error")} prohibited this ranking_points_entry from being saved:"
      %ul
        - @ranking_points_entry.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :expire_on
    = f.date_select :expire_on
  .field
    = f.label :total_points
    = f.text_field :total_points
  .field
    = f.label :player
    = f.text_field :player
  .actions
    = f.submit 'Save'
