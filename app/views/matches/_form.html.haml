= form_for @match do |f|
  - if @match.errors.any?
    #error_explanation
      %h2= "#{pluralize(@match.errors.count, "error")} prohibited this match from being saved:"
      %ul
        - @match.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :place
    = f.text_field :place
  .field
    = f.label :host
    = f.text_field :host
  .field
    = f.label :visitor
    = f.text_field :visitor
  .field
    = f.label :date
    = f.datetime_select :date
  .actions
    = f.submit 'Save'
