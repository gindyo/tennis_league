- model_class = Player
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:home_court_id) + ': '
  = @player.home_court_name
%p
  %strong= model_class.human_attribute_name(:user_id) + ': '
  = @player.name

.form-actions
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_player_path(@player.player), :class => 'btn'
